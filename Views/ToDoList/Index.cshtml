@model IEnumerable<ToDoList.Models.TodoList>

<div class="tasks-container">
    <div class="tasks-header">
        <h1>@ViewData["Title"]</h1>
        <div id="date" class="current-date">
            <span class="date-day"></span>
            <span class="date-month"></span>
            <span class="date-weekday"></span>
        </div>
        @if (!(ViewBag.IsAdmin as bool? ?? false))
        {
        <a asp-action="Create" class="btn-primary">
            <i class="fas fa-plus"></i> Add New Task
        </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            @TempData["Error"]
        </div>
    }

    <div class="tasks-list">
       <div class="export-container">
        <a asp-action="ExportCsv" class="export-btn">
            <i class="fas fa-file-csv"></i> Export to CSV
        </a>
    </div>
   @if (ViewBag.Categories != null)
{
    <div class="category-filter-container">
        <form asp-action="Index" method="get" class="category-filter-form">
            <div class="filter-group">
                <label for="categoryFilter" class="filter-label">
                    <i class="fas fa-filter"></i> Filter Tasks
                </label>
                <div class="select-wrapper">
                    <select name="categoryFilter" id="categoryFilter" class="category-select" onchange="this.form.submit()">
                        <option value="">All Categories</option>
                        @foreach (var category in ViewBag.Categories as List<string>)
                        {
                            if (category == (ViewBag.CurrentCategory as string))
                            {
                                <option value="@category" selected>@category</option>
                            }
                            else
                            {
                                <option value="@category">@category</option>
                            }
                        }
                    </select>
                    <div class="select-arrow">
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
        @foreach (var item in Model)
        {
            <div class="task-item @(item.IsCompleted ? "completed" : "")">
                <div class="task-main">
                    <form asp-action="ToggleComplete" asp-route-id="@item.id" method="post" class="task-checkbox">
                        <input type="checkbox" @(item.IsCompleted ? "checked" : "") 
                               onchange="this.form.submit()" />
                    </form>
                    <div class="task-content">
                        <span class="task-title">@item.Content</span>
                        <span class="task-date">Added @item.CreatedDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div>
                         @if (ViewBag.IsAdmin == true)
                        {
                            <span class="task-date">
                                By: @(item.User != null ? item.User?.UserName : "Unknown")
                            </span>
                        }
                    </div>
                </div>

                <div class="task-category-container">
                    <span class="task-category @(item.Category?.ToLower().Replace(" ","-"))">
                        @item.Category
                    </span>
                </div>
                <div class="task-actions">
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn-edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.id" method="post" class="delete-form">
                        <button type="submit" class="btn-delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
  @if (ViewBag.TotalPages > 1)
{
    <div class="pagination-container">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const dateElement = document.getElementById("date");
        const dayElement = dateElement.querySelector('.date-day');
        const monthElement = dateElement.querySelector('.date-month');
        const weekdayElement = dateElement.querySelector('.date-weekday');
        
        const today = new Date();
        const options = { 
            weekday: 'long', 
            month: 'short', 
            day: 'numeric'
        };
        
        const frenchDate = today.toLocaleDateString("fr-FR", options);
        const [weekday, day, month] = frenchDate.split(' ');
        
        dayElement.textContent = day;
        monthElement.textContent = month;
        weekdayElement.textContent = weekday.charAt(0).toUpperCase() + weekday.slice(1);        
    </script>
}
