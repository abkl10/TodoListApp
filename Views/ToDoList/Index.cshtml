<div class="tasks-container">
    <div class="tasks-header">
        <h1>@ViewData["Title"]</h1>
        <div id="date" class="current-date"></div>
        <a asp-action="Create" class="btn-primary">
            <i class="fas fa-plus"></i> Add New Task
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            @TempData["Error"]
        </div>
    }

    <div class="tasks-list">
        @foreach (var item in Model)
        {
            <div class="task-item @(item.IsCompleted ? "completed" : "")">
                <div class="task-main">
                    <form asp-action="ToggleComplete" asp-route-id="@item.id" method="post" class="task-checkbox">
                        <input type="checkbox" @(item.IsCompleted ? "checked" : "") 
                               onchange="this.form.submit()" />
                    </form>
                    <div class="task-content">
                        <span class="task-title">@item.Content</span>
                        <span class="task-date">Added @item.CreatedDate.ToString("MMM dd, yyyy")</span>
                    </div>
                </div>
                <div class="task-actions">
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn-edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.id" method="post" class="delete-form">
                        <button type="submit" class="btn-delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const dateElement = document.getElementById("date");
        const options = {weekday: 'long', month: 'short', day: 'numeric'}; 
        const today = new Date();
        dateElement.innerHTML = today.toLocaleDateString("fr-FR", options);
    </script>
}