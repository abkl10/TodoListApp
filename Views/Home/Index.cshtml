@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <!-- Welcome Section with User Profile -->
    <div class="welcome-card">
        <div class="user-profile">
            <div class="avatar">
                <span>👤</span>
            </div>
            <div class="user-info">
                <h1>Welcome back, @User.Identity?.Name!</h1>
                <p class="user-stats">
                    <span class="stat"><strong>@ViewBag.TotalTasks</strong> tasks</span>
                    <span class="stat"><strong>@ViewBag.CompletedTasks</strong> completed</span>
                    <span class="stat"><strong>@ViewBag.PendingTasks</strong> pending</span>
                </p>
            </div>
        </div>
        <div class="motivation-quote">
            <p>"Productivity is never an accident. It is always the result of a commitment to excellence, intelligent planning, and focused effort."</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="action-buttons">
            <a asp-controller="ToDoList" asp-action="Create" class="action-btn primary">
                <i class="fas fa-plus"></i> Add New Task
            </a>
            <a asp-controller="ToDoList" asp-action="Index" class="action-btn secondary">
                <i class="fas fa-list"></i> View All Tasks
            </a>
        </div>
    </div>

    <!-- Recent Tasks Preview -->
    <div class="recent-tasks">
        <div class="section-header">
            <h2>Your Recent Tasks</h2>
            <a asp-controller="ToDoList" asp-action="Index" class="see-all">See All →</a>
        </div>
        <div class="tasks-list">
            @foreach (var task in ViewBag.RecentTasks)
            {
                <div class="task-item">
                    <div class="task-info">
                        <input type="checkbox" @(task.IsCompleted ? "checked" : "") disabled />
                        <span class="task-title @(task.IsCompleted ? "completed" : "")">@task.Content</span>
                    </div>
                    <span class="task-date">@task.CreatedDate.ToString("MMM dd")</span>
                </div>
            }
        </div>
    </div>

    <!-- Productivity Tips -->
    <div class="productivity-tips">
        <h2>Productivity Tip of the Day</h2>
        <div class="tip-card">
            <div class="tip-icon">💡</div>
            <div class="tip-content">
                <h3>The 2-Minute Rule</h3>
                <p>If a task takes less than two minutes to complete, do it immediately. This prevents small tasks from piling up and becoming overwhelming.</p>
            </div>
        </div>
    </div>
</div>

    <style>
        /* Main container */
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
            display: grid;
            grid-gap: 2rem;
        }

        /* Welcome card */
        .welcome-card {
            background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%);
            color: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .user-profile {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .avatar {
            width: 70px;
            height: 70px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin-right: 1.5rem;
        }

        .user-info h1 {
            font-size: 1.8rem;
            margin: 0 0 0.5rem 0;
            font-weight: 600;
        }

        .user-stats {
            display: flex;
            gap: 1.5rem;
            margin: 0;
        }

        .stat {
            font-size: 0.95rem;
            opacity: 0.9;
        }

        .stat strong {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .motivation-quote p {
            font-style: italic;
            margin: 0;
            opacity: 0.9;
            font-size: 1.05rem;
            position: relative;
            padding-left: 1.5rem;
        }

        .motivation-quote p:before {
            content: '"';
            position: absolute;
            left: 0;
            top: -0.5rem;
            font-size: 2rem;
            opacity: 0.3;
        }

        /* Quick actions */
        .quick-actions {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .quick-actions h2 {
            color: #2c3e50;
            margin-top: 0;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .action-buttons {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .action-btn {
            padding: 1rem;
            border-radius: 8px;
            text-align: center;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .action-btn i {
            font-size: 1.1rem;
        }

        .action-btn.primary {
            background-color: #3a7bd5;
            color: white;
        }

        .action-btn.primary:hover {
            background-color: #2c5fb3;
            transform: translateY(-2px);
        }

        .action-btn.secondary {
            background-color: #f0f4f8;
            color: #3a7bd5;
            border: 1px solid #d6e0ea;
        }

        .action-btn.secondary:hover {
            background-color: #e1e8f0;
        }

        /* Recent tasks */
        .recent-tasks {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-header h2 {
            color: #2c3e50;
            margin: 0;
            font-size: 1.5rem;
        }

        .see-all {
            color: #3a7bd5;
            text-decoration: none;
            font-weight: 500;
        }

        .see-all:hover {
            text-decoration: underline;
        }

        .tasks-list {
            display: grid;
            gap: 0.75rem;
        }

        .task-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1rem;
            background-color: #f8fafc;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .task-item:hover {
            background-color: #f0f4f8;
        }

        .task-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .task-title {
            font-weight: 500;
        }

        .task-title.completed {
            text-decoration: line-through;
            color: #718096;
        }

        .task-date {
            font-size: 0.85rem;
            color: #718096;
        }

        /* Productivity tips */
        .productivity-tips {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .productivity-tips h2 {
            color: #2c3e50;
            margin-top: 0;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .tip-card {
            display: flex;
            gap: 1.5rem;
            background-color: #f0f7ff;
            padding: 1.5rem;
            border-radius: 8px;
        }

        .tip-icon {
            font-size: 2rem;
            opacity: 0.8;
        }

        .tip-content h3 {
            margin-top: 0;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }

        .tip-content p {
            margin: 0;
            color: #4a5568;
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .user-profile {
                flex-direction: column;
                text-align: center;
            }

            .avatar {
                margin-right: 0;
                margin-bottom: 1rem;
            }

            .user-stats {
                justify-content: center;
            }

            .action-buttons {
                grid-template-columns: 1fr;
            }
        }
    </style>


@section Scripts {
    <!-- Add Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
}